# RunVenture Marketing Site - Caddy Configuration
# For Mac mini self-hosting on UniFi network

# Development (local testing)
:8080 {
	root * /var/www/runventure
	file_server
	encode gzip
}

# Production
runventure.ca, www.runventure.ca {
	root * /var/www/runventure
	file_server
	encode gzip

	# Security headers
	header {
		X-Content-Type-Options nosniff
		X-Frame-Options DENY
		Referrer-Policy strict-origin-when-cross-origin
	}
}
